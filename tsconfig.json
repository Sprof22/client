{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/CheckoutForm.jsx", "CartContext.tsx", "pages/api/validator.js", "pages/api/validator.js", "pages/api/validator.js", "src/utils/validator.js", "src/utils/useOneSignal.js", "src/utils/validator.js", "src/utils/fakeData.js", "pages/api/auth/[...nextauth].js", "pages/api/check-subscription.js"],
  "exclude": ["node_modules"]
}
